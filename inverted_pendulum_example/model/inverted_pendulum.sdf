<?xml version="1.0"?>
<sdf version="1.11">
  <model name="inverted_pendulum">
    <static>false</static>

    <!-- 底座，固定在世界坐标原点 -->
    <link name="base">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-6</ixx><iyy>1e-6</iyy><izz>1e-6</izz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0 0 0</size>
          </box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.02</size>
          </box>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
        </material>
      </visual>
      <!-- 使底座固定在世界上 -->
      <self_collide>false</self_collide>
      <gravity>false</gravity>
    </link>

    <!-- 摆杆 -->
    <link name="pendulum">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <pose>0 0 0.5 0 0 0</pose>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.0836</ixx>
          <iyy>0.0836</iyy>
          <izz>0.00045</izz>
        </inertia>
      </inertial>
      <collision name="pendulum_collision">
        <pose>0 0 0.5 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>1.0</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="pendulum_visual">
        <pose>0 0 0.5 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>1.0</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.8 0.2 0.2 1</ambient>
          <diffuse>0.8 0.2 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- 连接底座和摆杆的关节 -->
    <joint name="pivot_joint" type="revolute">
      <parent>base</parent>
      <child>pendulum</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-3.14</lower>
          <upper>3.14</upper>
        </limit>
        <dynamics>
          <damping>0.01</damping>
        </dynamics>
      </axis>
    </joint>
  </model>
</sdf>
